{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm build -F slack...",
    "watchPatterns": ["apps/api/**", "packages/schemas/**", "packages/ui/**"]
  },
  "deploy": {
    "startCommand": "pnpm --filter slack start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

