{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm turbo build --filter=discord...",
    "watchPatterns": [
      "apps/api/**",
      "packages/schemas/**",
      "packages/ui/**"
    ]
  },
  "deploy": {
    "startCommand": "node dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

