{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build -F discord...",
    "watchPatterns": [
      "apps/api/**",
      "packages/schemas/**",
      "packages/ui/**",
      "packages/utils/**",
      "apps/discord/**"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/discord && bun run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
